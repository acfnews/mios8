# source this file to set MIOS variables for the MBHP_CORE module
# it can be sourced from any location - the $basedir variable will automatically determine where this file is located:
basedir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# example usage:
#    cd mios8
#    source source_me_MBHP_CORE
#    cd apps/templates/asm_skeleton
#    make

export MIOS_PATH=${basedir}
export MIOS_BIN_PATH=$MIOS_PATH/bin
